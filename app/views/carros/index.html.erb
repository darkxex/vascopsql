<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listando <small>Carro de Productos</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Carro de Productos</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
        
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                 <th>Precio</th>
             <th>Producto</th>
              <th>ID de Producto</th>
              
           
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <%
 contador = 0;
contador2 = 0;
%>
              <%= content_tag_for(:tr, @carros) do |carro| %>
              <td>$<%= carro.producto.precio%></td>
                   <td><%= carro.producto.nombre%></td>
              <td><%= carro.producto_id %></td>
        
              
                     
              <% contador += carro.producto.precio; %>
                   <% contador2 += 1 %>     
                <td><%= link_to 'Quitar', carro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
                <tr><th>Precio Total</th><th>NÂ°Productos en el Carro</th></tr>
                <td><%= "$ #{contador}" %> </td><td><%= "#{contador2}" %> </td>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

