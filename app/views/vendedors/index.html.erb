<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listando<small>Vendedores</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Vendedores</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_vendedor_path(@vendedor), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Nuevo Vendedor
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Nombre</th>
              <th>Rut</th>
              <th>Fono</th>
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @vendedors) do |vendedor| %>
              <td><%= vendedor.nombre %></td>
              <td><%= vendedor.rut %></td>
              <td><%= vendedor.fono %></td>
                            <td><%= link_to 'Mostrar', vendedor %></td>
                <td><%= link_to 'Editar', edit_vendedor_path(vendedor) %></td>
            
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

