<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>compras</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">compras</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_compra_path(@compra), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Compra
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Comentario</th>
              <th>Producto</th>
              <th>Cliente</th>
              <th>test</th>
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
                      <%
 contador = 0;

%>
              <%= content_tag_for(:tr, @compras) do |compra| %>
              <td><%= compra.comentario %></td>
              <td><%= compra.producto.nombre %></td>
              <td><%= compra.cliente %></td>
              <td><%= compra.cliente.id %></td>
              <% contador += compra.producto.precio; %>
                            <td><%= link_to 'Show', compra %></td>
                <td><%= link_to 'Edit', edit_compra_path(compra) %></td>
                <td><%= link_to 'Destroy', compra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
                 <tr><th>Precio Total</th></tr>
                <td><%= "$ #{contador}" %> </td>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

