<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listando <small>Carro de Compra</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Principal</a></li>
      <li class="active">Carro de Compra</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
         
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Precio</th>
              <th>Producto</th>
              <th>Cliente</th>
           <th>Estado</th>
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
                      <%
 contador = 0;
contador2 = 0;
%>
              <%= content_tag_for(:tr, @compras) do |compra| %>
              <td>$ <%= compra.producto.precio %></td>
              <td><%= compra.producto.nombre %></td>
              <td><%= compra.cliente.nombre %></td>
              <td><%= compra.comentario %></td>
              <% contador += compra.producto.precio; %>
                   <% contador2 += 1 %>       
                
                <td><%= link_to 'Quitar', compra, method: :delete, data: { confirm: '¿Seguro?' } %></td>
              <% end %>
                 <tr><th>Precio Total</th><th>N°Productos</th></tr>
                <td><%= "$ #{contador}" %> </td><td><%= "#{contador2}" %> </td>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

