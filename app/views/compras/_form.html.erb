<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@compra, :html => { :role => "form" }) do |f| %>
        <% if @compra.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= pluralize(@compra.errors.count, "error") %> prohibited this compra from being saved:</h4>

            <ul>
            <% @compra.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      <div class="form-group">
        <%= f.label :comentario %>
        <%= f.text_area :comentario, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :producto %>
        <%= f.text_field :producto, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :cliente %>
        <%= f.text_field :cliente, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</section> 