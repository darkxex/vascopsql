<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Mostrar <small>Factura Completa</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Principal</a></li>
      <li><%= link_to "Facturas", facturas_path %></li>
      <li class="active">Mostrar Factura Completa</li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
                    
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
          <% @compras = Compra.where(factura: @factura.id) %>
          

            <dt>Cliente:</dt>
            <dd><%= @factura.cliente.nombre %></dd>
            <dt>Rut Cliente:</dt>
            <dd><%= @factura.cliente.rut %></dd>
            <dt>Fono Cliente:</dt>
            <dd><%= @factura.cliente.fono %></dd>
            <p>
            <dt>Vendedor:</dt>
            <dd><%= @factura.vendedor.nombre %></dd>
            <dt>Rut Vendedor:</dt>
            <dd><%= @factura.vendedor.rut %></dd>
            <dt>Fono Vendedor:</dt>
            <dd><%= @factura.vendedor.fono %></dd>
            <p>

  <table class="table table-hover">
            <thead>
              <tr>

               <th>Producto</th>
                   <th>Precio</th>
         <th>ID de Producto</th>
             
       
              
              </tr>
            </thead>
            <tbody>
               <%
 contador = 0;
contador2 = 0;
%>
              <%= content_tag_for(:tr, @compras) do |compra| %>
               <td>$<%= compra.producto.precio %></td>
              <td><%= compra.producto.nombre %></td>
               
                        <td><%= compra.producto.id %></td>   
                        <% contador += compra.producto.precio; %>
                   <% contador2 += 1 %>     
              <% end %>
              <tr><th>Precio Total</th><th>NÂ°Productos en el Carro</th></tr>
                <td><%= "$ #{contador}" %> </td><td><%= "#{contador2}" %> </td>
            </tbody>
          </table>

          </dl>
        </div>
      </div>
    </div>
  </div>
</section>

